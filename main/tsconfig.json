{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }